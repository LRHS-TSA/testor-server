<h2>Edit <%= @test.name %></h2>
<%= form_for @test, remote: true do |f| %>
  <fieldset class="form-group">
    <%= f.label :name, class: 'form-control-label' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Test Name' %>
  </fieldset>

  <%= f.submit 'Update', class: 'btn btn-primary', data: { disable_with: 'Update' } %>
<% end %>
