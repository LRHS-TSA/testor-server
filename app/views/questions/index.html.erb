  <div class="card-header" name="question-type">
    <form name="delete-button" class="button_to" method="post" action="/tests/#/questions/#" data-remote="true"><input type="hidden" name="_method" value="delete"><input class="btn btn-danger float-xs-right" data-confirm="Are you sure?" type="submit" value="Delete"><input type="hidden" name="authenticity_token" value=""></form>
  </div>
  <div class="card-block">
    <blockquote class="blockquote" name="question-text">
    </blockquote>
    <p class="card-text">
    </p>
  </div>
</div>

