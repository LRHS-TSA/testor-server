<h2>Edit <%= @group.name %></h2>
<%= form_for @group, remote: true do |f| %>
  <fieldset class="form-group">
    <%= f.label :name, class: 'form-control-label' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Group Name' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :description, class: 'form-control-label' %>
    <%= f.text_area :description, cols: 20, rows: 10, class: 'form-control', placeholder: 'Description' %>
  </fieldset>

  <%= f.submit 'Update', class: 'btn btn-primary', data: { disable_with: 'Update' } %>
<% end %>
<hr>
<h3>Reset Student and Teacher Token</h3>
<%= button_to 'Reset', reset_tokens_group_path, remote: true, method: :put, class: 'btn btn-danger' %>
